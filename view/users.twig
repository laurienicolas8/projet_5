{% extends 'template_backend.twig' %}

{% block content %}

<h1>Utilisateurs</h1>

<div class="col-lg-12 d-flex justify-content-around flex-wrap">
    <div class="d-flex justify-content-center user_card" style="width: 14rem;">
        <div class="d-flex flex-column align-items-center">
            <i class="fa fa-user-plus fa-8x" aria-hidden="true"></i>
            <p class="name_user">Nouvel utilisateur</p>
        </div>
    </div>
    {% for user in allUsers %}
    <div class="d-flex justify-content-center user_card" style="width: 14rem;">
        <div class="d-flex flex-column align-items-center">
            <i class="fa fa-user fa-8x" aria-hidden="true"></i>
            <p class="name_user">{{ user.nameUser}} {{ user.lastnameUser }}</p>
            <p>{{ user.identifiant }}</p>
        </div>
        <div class="d-flex flex-column users_icons">
            <a href="/projet_5/details-user-{{ user.idUser }}" class="user_icon"><i class="fa fa-list-ul fa-lg" aria-hidden="true"></i></a>
            <a href="/projet_5/alert-user-{{ user.idUser }}" class="user_icon"><i class="fa fa-trash-o fa-lg" aria-hidden="true"></i></a>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}