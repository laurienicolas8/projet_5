{% extends 'template_backend.twig' %}

{% block head %}
<title>Utilisateurs - Administration</title>
{% endblock %}

{% block content %}
<div class="col-lg-12">
    <h1>Utilisateurs</h1>

    {% if allUsers == null %}
    <div class="alert alert-danger alert_empty" role="alert">
        Aucun utilisateur disponible. Créez-en un dès maintenant !
    </div>
    {% endif %}

    <div class="col-lg-12 d-flex justify-content-around flex-wrap user_container">
        <div class="d-flex justify-content-center user_card" style="width: 14rem;">
            <div class="d-flex flex-column align-items-center">
                <a href="/questionnary/new-user" class="link_icon_user"><i class="fa fa-user-plus fa-7x" aria-hidden="true"></i></a>
                <p class="name_user">Nouvel utilisateur</p>
            </div>
        </div>
        {% for user in allUsers %}
        <div class="d-flex justify-content-center user_card" style="width: 14rem;">
            <div class="d-flex flex-column align-items-center">
                <a href="/questionnary/details-user-{{ user.idUser }}" class="link_icon_user"><i class="fa fa-user fa-7x" aria-hidden="true"></i></a>
                <p class="name_user">{{ user.nameUser}} {{ user.lastnameUser }}</p>
                <p>{{ user.identifiant }}</p>
            </div>
            <div class="d-flex flex-column user_icons">
                <a href="/questionnary/edit-user-{{ user.idUser }}" class="user_icon"><i class="fa fa-pencil info_icon" aria-hidden="true"></i></a>
                <a href="/questionnary/alert-user-{{ user.idUser }}" class="user_icon"><i class="fa fa-trash-o delete_icon" aria-hidden="true"></i></a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}