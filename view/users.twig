{% extends 'template_backend.twig' %}

{% block head %}
<title>Utilisateurs - Administration</title>
{% endblock %}

{% block content %}

<h1>Utilisateurs</h1>

<div class="col-lg-12 d-flex justify-content-around flex-wrap user_container">
    <div class="d-flex justify-content-center user_card" style="width: 14rem;">
        <div class="d-flex flex-column align-items-center">
            <a href="/projet_5/new-user" class="link_icon_user"><i class="fa fa-user-plus fa-7x" aria-hidden="true"></i></a>
            <p class="name_user">Nouvel utilisateur</p>
        </div>
    </div>
    {% for user in allUsers %}
    <div class="d-flex justify-content-center user_card" style="width: 14rem;">
        <div class="d-flex flex-column align-items-center">
            <a href="/projet_5/details-user-{{ user.idUser }}" class="link_icon_user"><i class="fa fa-user fa-7x" aria-hidden="true"></i></a>
            <p class="name_user">{{ user.nameUser}} {{ user.lastnameUser }}</p>
            <p>{{ user.identifiant }}</p>
        </div>
        <div class="d-flex flex-column user_icons">
            <a href="/projet_5/alert-user-{{ user.idUser }}" class="user_icon"><i class="fa fa-trash-o fa-lg delete_icon" aria-hidden="true"></i></a>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}