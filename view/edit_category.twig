{% extends 'template_backend.twig' %}

{% block head %}
<title>Modifier</title>
{% endblock %}

{% block content %}
<div class="d-flex title-category">
    <a href="javascript:history.back()" class="back_arrow"><i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i></a>
    <h1>Modifier la catégorie</h1>
</div>

<div class="form_new_container">
    {% for category in oneCategory %}
    <form action="/projet_5/update-category-{{ category.idCategory }}" method="post">
        <div class="form-group">
            <label for="name_category">Nom</label>
            <input type="text" class="form-control" id="name_category" name="nameCategory" value="{{ category.nameCategory }}">
        </div>
        <div class="form-group">
            <label for="image_category">Image</label>
            <p id="current_image_category">{{ category.imageCategory }}</p>
            <input type="file" class="form-control-file" id="image_category" name="imageCategory">
            <small id="image_category_help" class="form-text text-muted">Choisissez un fichier seulement si vous souhaitez modifier l'image de la catégorie. </small>
        </div>
        
        <button type="submit" id="valid_new_category" class="btn btn-success valid_new_button">Enregistrer</button>
        
    </form>
    <button id="ex">valid</button>
    {% endfor %}
</div>
{% endblock %}

{% block footer %}
<script src="public/js/get_image_name.js"></script>
{% endblock %}