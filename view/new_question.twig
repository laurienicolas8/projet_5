{% extends 'template_backend.twig' %}

{% block head %}
<title>Nouvelle question</title>
{% endblock %}

{% block content %}

<div class="d-flex align-items-center title_details_quiz">
    <a href="javascript:history.back()" class="back_arrow"><i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i></a>
    {% for quiz in oneQuiz %}
    <h1>Nouvelle question | {{ quiz.nameQuiz }}</h1>
</div>

<div class="form_new_container">
    <form action="/questionnary/valid-new-question-{{ quiz.idQuiz }}" method="post">
        <div class="form-group">
            <label for="question">Question</label>
            <input type="text" class="form-control" id="question" name="question" required>
        </div>
       
        <div class="form-group">
            <label for="explanation">Explication après réponse</label>
            <textarea class="form-control" id="explanation" rows="3" name="explanation" required></textarea>
        </div>

        <button type="submit" class="btn btn-success valid_new_button">Enregistrer</button>
    </form>
</div>
{% endfor %}
{% endblock %}
