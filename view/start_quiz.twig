{% extends 'template_frontend.twig' %}

{% block head %}
<title>Quiz</title>
{% endblock %}

{% block content %}

<div class="container col-lg-11">
    <div class="row">
        {% for quiz in oneQuiz %}
            <div class="col-lg-12">
                <h1 class="title_start_quiz">{{ quiz.nameQuiz }}</h1>
                <p class="title_start_quiz">10 questions</p>
                <div class="col-lg-12 start_quiz_container">
                    <img src="public/images/img_quiz/{{ quiz.imageQuiz }}">
                    <a href="/projet_5/quiz-questions-{{ quiz.idQuiz }}" class="btn_start_quiz">Commencer le quiz<i class="fa fa-chevron-right fa-3x" aria-hidden="true"></i></a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
<!-- END ROW QUIZ -->
</div>

{% endblock %}