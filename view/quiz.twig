{% extends 'template_backend.twig' %}

{% block head %}
<title>Quiz - Administration</title>
{% endblock %}

{% block content %}

<h1>Quiz</h1>

<div class="col-lg-12 d-flex justify-content-center flex-wrap quiz_container">
    <div class="card quiz_card" style="width: 14rem;">
        <a href="/projet_5/new-quiz"><img class="card-img-top" src="public/images/img_quiz/new_quiz.png" alt="Illustration nouveau quiz"></a>
        <div class="card-text">
            <p class="card-text name_new_quiz">Nouveau quiz</p>
        </div>
    </div>
    {% for quiz in allQuiz %}
    <div class="card quiz_card" style="width: 14rem;">
        <a href="/projet_5/details-quiz-{{ quiz.idQuiz }}"><img class="card-img-top" src="public/images/img_quiz/{{ quiz.imageQuiz }}" alt="Image reprÃ©sentant le quiz"></a>
        <div class="card-text">
            <a class="card-text name_quiz">{{ quiz.nameQuiz }}</a>
        </div>
        <div class="card-footer d-flex justify-content-end all_quiz_icons">
            <a href="/projet_5/alert-quiz-{{ quiz.idQuiz }}" class="quiz_icon"><i class="fa fa-trash-o fa-lg delete_icon" aria-hidden="true"></i></a>
        </div>
    </div>
    {% endfor %}

    <nav aria-label="Page navigation example" class="pagination">
        <ul class="pagination d-flex justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            {% for i in 1..nbPages %}
                {% if i == currentPage %}
                <li class="page-item disabled">
                    <a class="page-link" href="" tabindex="-1">{{ i }}</a>
                </li>
                {% else %}
                <li class="page-item"><a class="page-link" href="/projet_5/all-quiz-{{ i }}">{{ i }}</a></li>
                {% endif %}
            {% endfor %}
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>

{% endblock %}