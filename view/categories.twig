{% extends 'template_backend.twig' %}

{% block head %}
<title>Catégories - Administration</title>
{% endblock %}

{% block content %}

<h1>Catégories</h1>

<div class="col-lg-12 d-flex justify-content-center flex-wrap category_container">
    <div class="d-flex justify-content-center flex-column category col-lg-2">
        <a href="/projet_5/new-category" class="link_img_category"><img src="public/images/img_categories/new.png" class="img_new_category" alt="Illustration nouvelle catégorie"></a>
        <p class="title_category">Nouvelle catégorie</p>
    </div>
    {% for category in allCategories %}
    <div class="d-flex justify-content-center category col-lg-2">
        <div class="d-flex flex-column align-items-center card_category_container">
            <a href="/projet_5/details-category-{{ category.idCategory }}" class="link_img_category"><img src="public/images/img_categories/{{ category.imageCategory }}" class="img_category" alt="Illustration catégorie"></a>
            <p class="title_category">{{ category.nameCategory }}</p>
        </div>
        <div class="d-flex flex-column category_icons">
            <a href="/projet_5/alert-category-{{ category.idCategory }}" class="category_icon delete_icon"><i class="fa fa-trash-o fa-lg" aria-hidden="true"></i></a>
        </div>
    </div>
    
    {% endfor %}
</div>

{% endblock %}