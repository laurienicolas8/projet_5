{% extends 'template_frontend.twig' %}

{% block head %}
<title>Quiz</title>
{% endblock %}

{% block content %}

<div class="container col-lg-12">
    <div class="row">
        {% for quiz in oneQuiz %}
            <h1 class="title_start_quiz">{{ quiz.nameQuiz }}</h1>
        {% endfor %}

        {% for question in singleQuestion %}
            <form class="col-lg-9 d-flex flex-column justify-content-around align-items-center question_container">
                <p class="question">{{ question.question }}</p>
                <div class="d-flex align-items-center">
                    {% for answer in allAnswers %}
                        <input type="radio" id="answer" name="answer" value="{{ answer.answer }}">
                        <label class="btn-secondary answer">{{ answer.answer }}</label>
                    {% endfor %}
                </div>
                <p class="explanation">{{ question.explanation }}</p>

                {% if nextQuestionIndex != null %}
                    <a href="/questionnary/question-{{ nextQuestionIndex }}-{{ questions[nextQuestionIndex].idQuiz }}" class=" col-lg-1 btn btn-success btn_valid">Suivant</a>
                {% else %}
                    <a href="" class=" col-lg-1 btn btn-success btn_valid">Termin√©</a>
                {% endif %}
            </form>
        {% endfor %}
    </div>
<!-- END ROW QUIZ -->
</div>

{% endblock %}