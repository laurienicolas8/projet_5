{% extends 'template_frontend.twig' %}

{% block head %}
<title>Tous les quiz</title>
{% endblock %}

{% block content %}

<div class="container d-flex flex-column col-lg-11">
    <a href="javascript:history.back()" class="back_arrow"><i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i></a>
    <img class="img-fluid rounded img_all_quiz" src="public/images/intro_all_quiz.png" style="max-width: 100%;" alt="Image d'accueil des quiz">

    <!-- ALL QUIZ -->
    <div class="row">
        {% for quiz in allQuiz %}
            <div class="col-lg-3 col-sm-6 portfolio-item">
                <div class="card h-100">
                    <a href="/projet_5/start-quiz-{{ quiz.idQuiz }}"><img class="card-img-top img_quiz" src="public/images/img_quiz/{{ quiz.imageQuiz }}" alt="Image reprÃ©sentant le quiz"></a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="/projet_5/start-quiz-{{ quiz.idQuiz }}">{{ quiz.nameQuiz }}</a>
                        </h4>                    
                    </div>
                </div>
            </div>
        {% endfor %}

        <nav aria-label="Page navigation example" class="pagination">
            <ul class="pagination d-flex justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                {% for i in 1..nbPages %}
                    {% if i == currentPage %}
                    <li class="page-item disabled">
                        <a class="page-link" href="" tabindex="-1">{{ i }}</a>
                    </li>
                    {% else %}
                    <li class="page-item"><a class="page-link" href="/projet_5/all-quiz-{{ i }}">{{ i }}</a></li>
                    {% endif %}
                {% endfor %}
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
<!-- END ROW ALL QUIZ -->
</div>

{% endblock %}