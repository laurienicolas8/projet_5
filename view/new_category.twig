{% extends 'template_backend.twig' %}

{% block head %}
<title>Nouvelle catégorie</title>
{% endblock %}

{% block content %}
<div class="d-flex title-category">
    <a href="javascript:history.back()" class="back_arrow"><i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i></a>
    <h1>Nouvelle catégorie</h1>
</div>

<div class="form_new_container">
    <form action="/projet_5/valid-new-category-" method="post">
        <div class="form-group">
            <label for="name_category">Nom</label>
            <input type="text" class="form-control" id="name_category" placeholder="Exemple : Animaux">
        </div>
        <div class="form-group">
            <label for="image_category">Image</label>
            <input type="file" class="form-control-file" id="image_category">
        </div>
        <button type="submit" class="btn btn-success valid_new_button">Enregistrer</button>
    </form>
</div>

{% endblock %}