{% extends 'template_backend.twig' %}

{% block head %}
<title>Modifier</title>
{% endblock %}

{% block content %}

<div class="d-flex align-items-center title_details_quiz">
    <a href="javascript:history.back()" class="back_arrow"><i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i></a>
    {% for question in oneQuestion %}
    <h1>Modifier la question</h1>
</div>

<div class="form_new_container">
    <form action="/projet_5/update-question-{{ question.idQuestion }}" method="post">
        <div class="form-group">
            <label for="question">Question</label>
            <input type="text" class="form-control" id="question" name="question" value="{{ question.question }}" required>
        </div>
       
        <div class="form-group">
            <label for="explanation">Explication après réponse</label>
            <textarea class="form-control" id="explanation" rows="3" name="explanation" required>{{ question.explanation }}</textarea>
        </div>

        <button type="submit" class="btn btn-success valid_new_button">Enregistrer</button>
    </form>
</div>
{% endfor %}
{% endblock %}
