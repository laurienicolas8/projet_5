{% extends 'template_frontend.twig' %}

{% block head %}
    <title>Contenu de la catégorie</title>
{% endblock %}

{% block content %}
    <div class='container col-11'>
        <a href='./index.php?action=home' class='back_arrow'><i class='fa fa-arrow-left fa-2x' aria-hidden='true'></i></a>

        <div class='title-category'>
            {% for category in oneCategory %}
                <img class='img-category' src='public/images/img_categories/{{ category.imageCategory }}' alt='Illustration catégorie'>
                <h1>{{ category.nameCategory }}</h1>
            {% endfor %}
        </div>

        {% if allQuiz != null %}
            <div class='row quiz_by_cat_container'>
                {% for quiz in allQuiz %}
                    <div class='col-lg-2 col-sm-4 portfolio-item quiz_single_category'>
                        <div class='card h-100'>
                            <a href='./index.php?action=start-quiz&idQuiz={{ quiz.idQuiz }}'><img class='card-img-top img_quiz' src='public/images/img_quiz/{{ quiz.imageQuiz }}' alt='Image représentant le quiz'></a>
                            <div class='card-body'>
                                <h4 class='card-title'>
                                    <a href='./index.php?action=start-quiz&idQuiz={{ quiz.idQuiz }}'>{{ quiz.nameQuiz }}</a>
                                </h4>                    
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="col-lg-12 alert alert-primary" role="alert">Cet élément est en cours de création, il est actuellement indisponible.</div>
        {% endif %}
    </div>
{% endblock %}