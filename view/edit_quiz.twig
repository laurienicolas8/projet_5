{% extends 'template_backend.twig' %}

{% block head %}
<title>Modifier</title>
{% endblock %}

{% block content %}
<div class="d-flex title-category">
    <a href="javascript:history.back()" class="back_arrow"><i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i></a>
    <h1>Modifier le quiz</h1>
</div>

<div class="form_new_container">
    <form action="" method="post">
        <div class="form-group">
            {% for quiz in oneQuiz %}
            <label for="name_quiz">Nom</label>
            <input type="text" class="form-control" id="name_quiz" value="{{ quiz.nameQuiz }}">
        </div>
        <div class="form-group">
            <label for="image_quiz">Image</label>
            <p class="current_image_quiz">{{ quiz.imageQuiz }}</p>
            <input type="file" class="form-control-file" id="image_quiz">
            <small id="image_quiz_help" class="form-text text-muted">Choisissez un fichier seulement si vous souhaitez modifier l'image du quiz. </small>
        </div>
        <div class="form-group">
            <label for="select_id_category">Catégorie d'appartenance</label>
            <select class="custom-select" id="select_id_category">
                <option selected>Sélectionner...</option>
                {% for category in allCategories %}
                <option value="{{ category.idCategory }}">{{ category.nameCategory }}</option>
                {% endfor %}
            </select>
        </div>

        <button type="submit" class="btn btn-success valid_new_button">Enregistrer</button>
        {% endfor %}
    </form>
</div>

{% endblock %}