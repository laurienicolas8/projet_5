{% extends 'template_frontend.twig' %}

{% block head %}
<title>Quiz</title>
{% endblock %}

{% block content %}

<div class="container col-lg-12">
    <div class="row">
        {% for quiz in oneQuiz %}
            <h1 class="title_start_quiz">{{ quiz.nameQuiz }}</h1>
        {% endfor %}

        {% for question in singleQuestion %}
            <div class="col-lg-9 d-flex flex-column justify-content-around align-items-center question_container">
                <p class="question">{{ question.question }}</p>
                {% if session.right_answer is defined %}
                    <p class="good_appreciation">{{ session.right_answer }}</p>
                {% elseif session.wrong_answer is defined %}
                    <p class="bad_appreciation">{{ session.wrong_answer }}</p>
                {% endif %}
                <div class="d-flex justify-content-center align-items-center">
                    {% for answer in allAnswers %}
                        {% if answer.rightAnswer %}
                            <div class="btn btn-success answer">
                                {{ answer.answer }}
                            </div>
                        {% elseif session.wrong_answer is defined %}
                            {% if answer.idAnswer == answerPlayer %}
                                <div class="btn btn-danger answer">
                                    {{ answer.answer }}
                                </div>
                            {% else %}
                                <div class="btn btn-secondary answer">
                                    {{ answer.answer }}
                                </div>
                            {% endif %}
                        {% else %}
                            <div class="btn btn-secondary answer">
                                {{ answer.answer }}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <p class="explanation">{{ question.explanation }}</p>
            </div>
            <div class="col-lg-10 d-flex justify-content-end next_question_button">
                {% if nextQuestionIndex != null %}
                    <a href="/questionnary/question-{{ nextQuestionIndex }}-{{ questions[nextQuestionIndex].idQuiz }}" class="col-lg-2 btn btn-lg btn-success btn_next">Suivant</a>
                {% else %}
                    <a href="/questionnary/result-{{ question.idQuiz }}" class="col-lg-2 btn btn-lg btn-success">Termin√©</a>
                {% endif %}
            </div>
        {% endfor %}
    </div>
<!-- END ROW QUIZ -->
</div>

{% endblock %}

{% block footer %}
<script>
$('.btn_next').click(function() {
    page = $(this).attr('href');
    $.ajax({
        url: page,
        cache: false,
        success: function(html) {
            $('body').empty();
            $('body').append(html);
        },
        error: function() {
            alert('error');
        },
    });
    return false;
});
</script>
{% endblock %}